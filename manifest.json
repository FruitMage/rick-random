{
	"manifest_version": 2,

	"name": "Rick Random",
	"description": "There's a 1% chance that I'm never gonna give you up",
	"version": "0.1",

	"browser_action": {
		"default_icon": "img/icon.png"
	},
  
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"js/content.js"
			]
		}
	],
  
	"permissions": [
		"http://*/*",
		"https://*/*"
	]
}